{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types"
    ],
    "baseUrl": "./src",
    "rootDir": "./"
  },
  "include": ["src/index.ts"],
  "$schema": "https://json.schemastore.org/tsconfig"
}
